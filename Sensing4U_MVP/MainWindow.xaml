<Window x:Class="Sensing4U_MVP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sensing4U_MVP"
        xmlns:Services="clr-namespace:Sensing4U_MVP.Services"
        xmlns:Views="clr-namespace:Sensing4U_MVP.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Views:MenuBar />

        <!-- Content Pane -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" MinWidth="100" MaxWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="200" MinWidth="100" MaxWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- File Navigation -->
            <Views:FileNavigation Grid.Column="0" />

            <!-- GridSplitter for resizing -->
            <GridSplitter 
                Grid.Column="1" 
                Width="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Gray"
                ShowsPreview="True"
                ResizeBehavior="PreviousAndNext"/>

            <!-- Main Content Display -->
            <Views:SensorDataGrid Grid.Column="2"/>

            <!-- Control Pane -->
            <Views:ControlPanel Grid.Column="3"/>
        </Grid>

        <!-- Footer -->

    </Grid>
</Window>
