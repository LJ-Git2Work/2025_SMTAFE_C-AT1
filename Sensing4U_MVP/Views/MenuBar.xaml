<UserControl x:Class="Sensing4U_MVP.Views.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sensing4U_MVP.Views"
             mc:Ignorable="d" 
             Height="30" d:DesignWidth="800">
    <Grid>
        <Menu>
            <MenuItem Header="File" FontSize="16" >
                <MenuItem Header="Open" Command="{Binding OpenFileCommand}"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save As"/>
                <MenuItem Header="Save All" Command="{Binding SaveAllCommand}"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
